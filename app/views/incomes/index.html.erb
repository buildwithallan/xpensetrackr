<table class="table-auto mx-auto mt-5 min-w-lg border border-gray-200">
 <thead class="bg-gray-200">
 	<tr class="sm:table-row">
 		<th scope="col" class="border border-gray-100 text-left px-3 py-2 text-gray-600 font-semibold">Date</th>
 		<th scope="col" class="border border-gray-100 text-left px-3 py-2 text-gray-600 font-semibold">Income</th>
 		<th scope="col" class="border border-gray-100 text-left px-3 py-2 text-gray-600 font-semibold">Action</th>
 	</tr>
 </thead>
 <tbody>
   <% @incomes.each do |income| %>
 	<tr class="border-b border-gray-200 hover:bg-gray-100">
 		<td class="text-gray-600 px-3 py-1"><%= income.income_date %></td>
 		<td class="text-gray-600 px-3 py-1"><%= income.monthly_income %></td>
 		<td class="flex items-center px-3 py-1"><%= link_to edit_income_path(income.id) do %>
				<svg class="ml-15 w-4 h-4 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path></svg>
				<% end %>
				<%= button_to income_path(income.id), method: :delete, data: {confirm: "Are you sure you want to delete?"} do %>
				 <svg class="mr-10 w-4 h-4 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
				<% end %>
		</td>
 	</tr>
   <% end %>
 </tbody>
</table>



 

