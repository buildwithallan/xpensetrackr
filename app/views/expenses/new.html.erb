<div class="mt-10 max-w-md mx-auto">
	<%= form_with model: @expense do |f| %>
	<%= render "shared/form_errors", form: f %>
	  
	  <%= f.label :Date, class: "block text-gray-700" %>
	  <%= f.date_field :expense_date, class: "mt-1 w-full rounded-md border border-gray-300 shadow-sm focus:outline-none focus:border-indigo-300 focus:ring focus:ring-indigo-300 focus:ring-opacity-50 px-2 py-1 mb-2" %>	

	  <%= f.label :Expense_name, class: "block text-gray-700" %>
	  <%= f.text_field :expense_name, class: "mt-1 w-full rounded-md border border-gray-300 shadow-sm focus:outline-none focus:border-indigo-300 focus:ring focus:ring-indigo-300 focus:ring-opacity-50 px-2 py-1 mb-2" %>

	  <%= f.label :category, class: "block text-gray-700" %>
	  <%= f.select :category, options_for_select(['Food', 'Transportation', 'Accomadation', 'Entertainment', 'Miscellaneous']), {:include_blank => ''}, class: "mt-1 w-full rounded-md border border-gray-300 shadow-sm focus:outline-none focus:border-indigo-300 focus:ring focus:ring-indigo-300 focus:ring-opacity-50 px-2 py-1 mb-2" %>

	  <%= f.label :amount,class: "block text-gray-700" %>
	  <%= f.text_field :amount, class: "mt-1 w-full rounded-md border border-gray-300 shadow-sm focus:outline-none focus:border-indigo-300 focus:ring focus:ring-indigo-300 focus:ring-opacity-50 px-2 py-1 mb-5" %>

	  <%= f.submit "Save Expense", class: "block bg-transparent border border-indigo-500 h-10 px-3 rounded-lg text-indigo-700 hover:bg-indigo-400 hover:text-indigo-100 cursor-pointer" %>
	<% end %>
</div>

