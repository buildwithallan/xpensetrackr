 <% if flash[:notice] %>
	<div class="max-w-sm mx-auto py-3 mt-4 text-center leading-normal text-blue-700 bg-blue-100 rounded-lg" role="alert">
	   <%= flash[:notice] %>
	</div>
<% end %>

<% if flash[:alert] %>
	<div class="max-w-sm mx-auto py-3 mt-4 text-center leading-normal text-red-700 bg-red-100 rounded-lg" role="alert">
	   <%= flash[:alert] %>
	</div>
<% end %>

